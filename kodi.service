[Unit]
Description=Kodi standalone (GBM)
After=systemd-user-sessions.service
Conflicts=getty@tty1.service

[Service]
User=lina
PAMName=login
TTYPath=/dev/tty1
ExecStart=/usr/bin/kodi-standalone --logging=console
KillSignal=SIGINT
Restart=on-abort
StandardInput=tty
StandardOutput=journal

[Install]
Alias=display-manager.service
